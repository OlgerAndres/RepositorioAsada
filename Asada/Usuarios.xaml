<Window x:Class="Asada.Usuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuarios" Height="448" Width="840">
    <Grid>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.529,0.549"/>
        <Label Content="Clave" HorizontalAlignment="Left" Margin="22,103,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.89,-0.819"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="84,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtClave" HorizontalAlignment="Left" Height="19" Margin="84,110,0,0" VerticalAlignment="Top" Width="120"/>
        <DataGrid CanUserAddRows="false" x:Name="dgUsuarios" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top" Height="217" Width="785"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="380,35,0,0" VerticalAlignment="Top" Width="75" Click="btnAgregar_Click"/>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="380,110,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="504,35,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="504,110,0,0" VerticalAlignment="Top" Width="75" Click="btnSalir_Click"/>
    </Grid>
</Window>
