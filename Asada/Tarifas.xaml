<Window x:Class="Asada.Tarifas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tarifas" Height="522" Width="538">
    <Grid Loaded="Grid_Loaded">
        <Label Content="Tipo de tarifa" HorizontalAlignment="Left" Margin="25,28,0,0" VerticalAlignment="Top"/>
        <Label Content="Precio" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.368,0.423"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Height="23" Margin="132,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="30,158,0,0" VerticalAlignment="Top" Width="75" Click="btnAgregar_Click"/>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="159,158,0,0" VerticalAlignment="Top" Width="75" Click="btnModificar_Click"/>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="291,158,0,0" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click" />
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="420,158,0,0" Click="btnSalir_Click"/>
        <ComboBox x:Name="cmbTipo" HorizontalAlignment="Left" Margin="132,28,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Comercial"/>
            <ComboBoxItem Content="Industrial"/>
            <ComboBoxItem Content="Residencial"/>
            <ComboBoxItem Content="Gubernamental"/>
        </ComboBox>
        <DataGrid CanUserAddRows="false" x:Name="DgTarifas"  AutoGenerateColumns="False" 
        	HorizontalAlignment="Left" Margin="68,220,0,0" VerticalAlignment="Top"
        	Height="249" Width="350" SelectionMode="Single" SelectionChanged="DgSectores_SelectionChanged" >

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" IsReadOnly="True" Header="Id" Width="100"/>
                <DataGridTextColumn Binding="{Binding Descripcion, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Header="Descripción" Width="100" />
                <DataGridTextColumn Binding="{Binding Precio, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Header="Precio" Width="100" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate/>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate/>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
